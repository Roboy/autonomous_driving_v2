<!--
Launch the navigation stack to run on a static map published by map server.
-->
<launch>
  <arg name="map_configfile" default="Interims.yaml"/>
  <arg name="goal_tolerance_local_planner" default="0.5"/>
  <arg name="maximum_distance_luigi" value="$(eval 1.2*arg('goal_tolerance_local_planner'))"/>
  <arg name="map_config"
       default="$(find roboy_navigation)/config/$(arg map_configfile)"/>
  <node name="map_server" pkg="map_server" type="map_server"
        args="$(arg map_config)" output="screen"/>
  <node pkg="move_base" type="move_base" respawn="false" name="move_base"
        output="screen">

    <rosparam file="$(find roboy_navigation)/config/base_local_planner.yaml"
              command="load"/>
    <rosparam file="$(find roboy_navigation)/config/quadtree_planner.yaml"
              command="load"/>
    <rosparam file="$(find roboy_navigation)/config/global_costmap.yaml"
              command="load"/>
    <rosparam file="$(find roboy_navigation)/config/local_costmap.yaml"
              command="load"/>
    <rosparam file="$(find roboy_navigation)/config/common_costmap.yaml"
              command="load" ns="global_costmap"/>
    <rosparam file="$(find roboy_navigation)/config/common_costmap.yaml"
              command="load" ns="local_costmap"/>
    <rosparam file="$(find roboy_navigation)/config/$(arg map_configfile)"
              command="load" ns="QuadTreePlanner"/>
    <param name="base_local_planner"
           value="base_local_planner/TrajectoryPlannerROS"/>
    <param name="base_global_planner" value="quadtree_planner::QuadTreePlanner"/>
    <param name="recovery_behavior_enabled" value="false" />
    <param name="max_planning_retries" value="0" />
    <rosparam param="/move_base/TrajectoryPlannerROS/xy_goal_tolerance" subst_value="True">$(arg goal_tolerance_local_planner)</rosparam>
  </node>
  <node pkg="quadtree_planner" type="autonomous_driving" respawn="false"
        name="autonomous_driving" output="screen"/>
  <node pkg="quadtree_planner" type="calculateHasArrivedFlag.py" respawn="false"
        name="calculateFlag" output="screen"
        args="-d $(arg maximum_distance_luigi)"/>
</launch>

